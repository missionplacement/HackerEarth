#include<iostream>
#include<cstring>
using namespace std;
int main()
{
    int i,count=1,l;
    char name[20];
    cin>>name;
    l=strlen(name);
    for(i=0;i<=l;i++)
    {
        if(name[i]==name[l-i-1])
        count=0;
    }
    if(count==0)
    cout<<"YES";
    else
    cout<<"NO";
    return 0;
}
######################################################3
python solution passed in hackerearth
def main():
  n=(input())
  #list(n)
  l=[c for c in n]
  l1=l[::-1]
  #print(l)
  #print(l1)
  result=list()
  for i in range(len(l)):
    if(l[i]==l1[i]):
      result.append('YES')
    else:
      result.append('NO')
    
  #print(result)

  if 'NO' in result:
    print('NO')
  else:
    print('YES')
    
if __name__=="__main__":
  main()
